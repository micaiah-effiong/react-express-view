{
  "$schema": "http://json.schemastore.org/tsconfig",
  "include": ["src"],
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "lib": ["es6", "es2017", "es2018", "esnext.asynciterable"],
    "jsx": "preserve",
    "moduleResolution": "node"
  }
}
