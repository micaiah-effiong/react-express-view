{
  "$schema": "http://json.schemastore.org/tsconfig",

  "compilerOptions": {
    "rootDir": "src",
    "target": "esnext",
    "module": "CommonJS",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "jsx": "react",

    "lib": ["es6", "es2017", "es2018", "esnext.asynciterable"],
    "moduleResolution": "node"
  }
}
